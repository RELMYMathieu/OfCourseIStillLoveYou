	<PropertyGroup>
		<PreBuildEvent>
			SET ModName=OfCourseIStillLoveYou

			@echo Cleaning Distribution folder...
			if exist "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\" (
			RD /S /Q "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			)
			MD "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"

			if exist "$(ProjectDir)Distribution\GameData\%25ModName%25\Textures\" (
			RD /S /Q "$(ProjectDir)Distribution\GameData\%25ModName%25\Textures\"
			)
			MD "$(ProjectDir)Distribution\GameData\%25ModName%25\Textures\"
		</PreBuildEvent>
	</PropertyGroup>
	<PropertyGroup>
		<PostBuildEvent>
			@echo $(Targetname)
			SET ModName=OfCourseIStillLoveYou

			rem Get paths from _LocalDev
			set GIT_PATH=$(SolutionDir)
			set GIT_PATH=%25GIT_PATH:OfCourseIStillLoveYou\=%25

			@echo Reading local dev configuration...
			set /p KSP_DIR=&lt;"%25GIT_PATH%25_LocalDev\ksp_dir.txt"
			set /p PDB2MDB_EXE=&lt;"%25GIT_PATH%25_LocalDev\pdb2mdb_exe.txt"
			set /p ZA_DIR=&lt;"%25GIT_PATH%25_LocalDev\7za_dir.txt"
			set /p DIST_DIR=&lt;"%25GIT_PATH%25_LocalDev\dist_dir.txt"

			@echo ========================================
			@echo Copying assemblies to Distribution...
			@echo ========================================

			rem Copy main mod DLLs
			xcopy /Y "$(TargetDir)OfCourseIStillLoveYou.dll" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "$(TargetDir)OfCourseIStillLoveYou.pdb" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "$(TargetDir)OfCourseIStillLoveYou.Client.dll" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "$(TargetDir)OfCourseIStillLoveYou.Client.pdb" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"

			@echo Copying gRPC dependencies...
			xcopy /Y "..\Dependencies\win\grpc_csharp_ext.dll" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "..\Dependencies\Google.Protobuf.dll" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "..\Dependencies\Grpc.Core.exe" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"
			xcopy /Y "..\Dependencies\Grpc.Core.Api.dll" "$(ProjectDir)Distribution\GameData\%25ModName%25\Plugins\"

			@echo ========================================
			@echo Copying textures and config files...
			@echo ========================================

			rem Copy textures (assuming they're in a Textures subfolder)
			if exist "$(ProjectDir)Textures\" (
			xcopy /E /Y "$(ProjectDir)Textures\*.*" "$(ProjectDir)Distribution\GameData\%25ModName%25\Textures\"
			)

			rem Copy settings.cfg (assuming it's in the project root or a specific location)
			if exist "$(ProjectDir)Distribution\GameData\%25ModName%25\settings.cfg" (
			@echo settings.cfg already in Distribution folder
			) else if exist "$(ProjectDir)settings.cfg" (
			xcopy /Y "$(ProjectDir)settings.cfg" "$(ProjectDir)Distribution\GameData\%25ModName%25\"
			)

			@echo ========================================
			@echo Creating release package...
			@echo ========================================

			@echo Deleting previous builds...
			if exist "%25DIST_DIR%25\%25ModName%25.*.zip" del "%25DIST_DIR%25\%25ModName%25.*.zip"

			@echo Packaging new build...
			call "%25ZA_DIR%25\7za.exe" a -tzip -r "%25DIST_DIR%25\%25ModName%25.@(VersionNumber)_%25DATE:~4,2%25%25DATE:~7,2%25%25DATE:~10,4%25%25time:~0,2%25%25time:~3,2%25.zip" "$(ProjectDir)Distribution\*.*"

			@echo ========================================
			@echo Deploying to KSP test environment...
			@echo ========================================

			xcopy /E /Y "$(ProjectDir)Distribution\GameData" "%25KSP_DIR%25\GameData"

			@echo ========================================
			@echo Build/deploy complete!
			@echo ========================================
		</PostBuildEvent>
